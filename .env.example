# =============================================================================
# Autonomous Tech Research Agent - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Get your FREE Groq API key at: https://console.groq.com/keys
# =============================================================================

# LLM Configuration (Groq - FREE tier available)
GROQ_API_KEY=your_groq_api_key_here

# Model Selection (all available on Groq free tier)
# Options: llama-3.3-70b-versatile, llama-3.1-8b-instant, mixtral-8x7b-32768
LLM_MODEL=llama-3.3-70b-versatile

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Agent Configuration
AGENT_MAX_ITERATIONS=15
AGENT_MEMORY_SIZE=100
DEFAULT_MAX_SOURCES=8

# Memory Database (SQLite for persistent storage)
MEMORY_DB_PATH=./data/memory.db

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
